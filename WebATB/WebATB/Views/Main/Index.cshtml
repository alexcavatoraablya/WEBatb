@using WebATB.Models.Users
@model List<UserItemModel>
@{
    Layout = "MainLayout"; //не використовуємо Layout
}

<h1 class="text-center">Список користувачів</h1>
<a asp-action="Create" class="btn btn-success">Додати</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Фото</th>
            <th scope="col">ПІБ</th>
            <th scope="col">Телефон</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>
                    <img src="/images/@user.Image" width="150" alt="@user.Name" />
                </td>
                <td>@user.Name</td>
                <td>@user.Phone</td>
            </tr>
        }
    </tbody>
</table>